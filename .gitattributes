# Auto detect text files and perform LF normalization
* text=auto

# Frontend files
frontend/** text eol=lf

# Backend Python files
*.py text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.conf text eol=lf
*.md text eol=lf

# Ensure these files are always treated as text
*.js text eol=lf
*.jsx text eol=lf
*.css text eol=lf
*.html text eol=lf

