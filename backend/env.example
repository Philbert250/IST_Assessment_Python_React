# ============================================
# Django Core Settings
# ============================================
# Secret key for Django - Generate a new one for production!
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production

# Debug mode - Set to False in production
DEBUG=True

# Allowed hosts - Comma-separated list of host/domain names
# For production, add your domain: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Database Configuration
# ============================================
# PostgreSQL database URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/NAME
# For Docker: postgresql://postgres:postgres@db:5432/procure_to_pay
# For local: postgresql://postgres:postgres@localhost:5432/procure_to_pay
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/procure_to_pay

# ============================================
# Redis Configuration
# ============================================
# Redis URL for caching and Celery
# For Docker: redis://redis:6379/0
# For local: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# ============================================
# CORS Configuration
# ============================================
# Allowed origins for CORS - Comma-separated list
# Add your frontend URL(s) here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# AI API Configuration (Choose one)
# ============================================
# Option 1: OpenAI (paid, high quality)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Option 2: Google Gemini (FREE - Recommended!)
# Get free API key: https://makersuite.google.com/app/apikey
# No credit card required, 1,500 requests/day free
GOOGLE_GEMINI_API_KEY=your-gemini-api-key-here

# AI Provider: 'openai', 'gemini', or 'ocr' (OCR-only, no AI, completely free)
# Default: gemini (free)
AI_PROVIDER=gemini

# ============================================
# File Upload Settings
# ============================================
# Maximum file upload size in bytes (default: 10MB = 10485760)
MAX_UPLOAD_SIZE=10485760

# Allowed file types - Comma-separated list
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# ============================================
# Email Configuration
# ============================================
# Email backend - Use 'console' for development (prints to console)
# For production, use 'smtp' or configure with your email provider
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Settings (for production)
# Gmail example:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# ============================================
# AWS S3 Configuration (Optional)
# ============================================
# Set to True to use S3 for file storage, False to use local filesystem
USE_S3=False

# AWS credentials (only needed if USE_S3=True)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# ============================================
# Production Settings (Optional)
# ============================================
# Time zone (default: UTC)
# Examples: America/New_York, Europe/London, Asia/Tokyo
# TIME_ZONE=UTC

# Language code (default: en-us)
# LANGUAGE_CODE=en-us

